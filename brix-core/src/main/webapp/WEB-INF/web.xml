<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	 version="2.4">

	<display-name>brix</display-name>

	 <!--  
	      There are three means to configure Wickets configuration mode and they are
	      tested in the order given. 
	      1) A system property: -Dwicket.configuration
	      2) servlet specific <init-param>
	      3) context specific <context-param>
	      The value might be either "development" (reloading when templates change)
	      or "deployment". If no configuration is found, "development" is the default.
	-->

	<servlet>	
		<servlet-name>SimpleWebDav</servlet-name>
		<servlet-class>brix.web.dav.SimpleServlet</servlet-class>
		<init-param>
            <param-name>resource-path-prefix</param-name>
            <param-value>/webdav</param-value>
        </init-param>
        <init-param>
            <param-name>resource-config</param-name>
            <param-value>/WEB-INF/config.xml</param-value>           
        </init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>SimpleWebDav</servlet-name>
		<url-pattern>/webdav/*</url-pattern>
	</servlet-mapping>

	<servlet>	
		<servlet-name>JcrWebDav</servlet-name>
		<servlet-class>brix.web.dav.JcrServlet</servlet-class>
		<init-param>
            <param-name>resource-path-prefix</param-name>
            <param-value>/jcrwebdav</param-value>
        </init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>JcrWebDav</servlet-name>
		<url-pattern>/jcrwebdav/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>wicket.brix</filter-name>
 		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>brix.web.admin.AdminApp</param-value>
 		</init-param>
 	</filter>

 <filter-mapping>
  	<filter-name>wicket.brix</filter-name>
	<url-pattern>/*</url-pattern>
	<dispatcher>REQUEST</dispatcher>
  	<dispatcher>ERROR</dispatcher>	
 </filter-mapping>
 
 <!-- 
 <error-page>
 	<error-code>404</error-code>
  	<location>/NotFound</location>
 </error-page>
 -->

</web-app>
